#!/bin/bash
cd ~/work/device/xiaomi/fleur/prebuilts
aria2c https://github.com/ShazuxD/extras/releases/download/v1.0.0/vendor.img
ls
cd ~/work
rm -rf system/bpf
git clone https://github.com/PixelExperience/system_bpf.git system/bpf
rm - rf frameworks/av
rm -rf packages/modules/Bluetooth
git clone https://github.com/ShazuxD/packages_modules_Bluetooth -b 13 packages/modules/Bluetooth --depth=1
git clone https://github.com/ShazuxD/frameworks_av frameworks/av --depth=1
. build/envsetup.sh
export CCACHE_DIR=/tmp/ccache
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1
ccache -M 50G
ccache -o compression=true
ccache -z
lunch "$LUNCH_COMBO"
make $TARGET -j8
